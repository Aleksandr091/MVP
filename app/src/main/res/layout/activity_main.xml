<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTextOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textTV" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextOne" />

    <TextView
        android:id="@+id/tvTextTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textTV" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextTwo" />

    <TextView
        android:id="@+id/tvTextThee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textTV" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnThee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextThee" />

</androidx.appcompat.widget.LinearLayoutCompat>